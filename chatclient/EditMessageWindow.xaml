 <Window x:Class="ChatClient.EditMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование сообщения"
        Width="520"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Редактирование"
                               Style="{StaticResource SectionTitleText}"
                               FontSize="16"/>
                    <TextBlock Text="Обновите текст сообщения и сохраните изменения."
                               Style="{StaticResource SectionSubtitleText}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <TextBox x:Name="MessageTextBox"
                         Grid.Row="1"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Padding="8"
                         Margin="0,0,0,12"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="HintTextBlock"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushTextSecondary}"
                               Text="Нажмите сохранить, чтобы применить изменения."/>

                    <Button Grid.Column="1"
                            Content="Отмена"
                            Width="110"
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="OnCancelClick"/>

                    <Button Grid.Column="2"
                            Content="Сохранить"
                            Width="120"
                            Height="32"
                            Click="OnSaveClick"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>