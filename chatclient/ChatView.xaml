<UserControl x:Class="ChatClient.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChatClient"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="680">

    <UserControl.Resources>
        <Style x:Key="MessageActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===================== HEADER ===================== -->
        <Border Grid.Row="0"
                Style="{StaticResource CardBorderStyle}"
                Padding="14"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding UserName}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushTextPrimary}"
                               Margin="0,0,20,0"/>

                   
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Профиль"
                            Width="100"
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="OnProfileClick"/>

                    <Button Content="Выйти"
                            Width="90"
                            Height="32"
                            Click="OnLogoutClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===================== MESSAGES ===================== -->
        <Border Grid.Row="1"
                Style="{StaticResource CardBorderStyle}"
                Padding="10">
            <ListBox x:Name="MessagesListBox"
                     ItemsSource="{Binding Messages}"
                     MouseDoubleClick="OnMessagesListBoxMouseDoubleClick">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>

                            <!-- MESSAGE BUBBLE -->
                            <Border x:Name="MessageBubble"
                                    MaxWidth="420"
                                    Margin="6,2"
                                    Padding="12,8"
                                    Background="{StaticResource BrushSurfaceAlt}"
                                    CornerRadius="16"
                                    HorizontalAlignment="Left">
                                <StackPanel>
                                    <TextBlock x:Name="FileLabel"
                                               Text="{Binding FileName, StringFormat=[Файл: {0}]}"
                                               FontSize="11"
                                               Foreground="{StaticResource BrushTextSecondary}"
                                               Margin="0,0,0,4"
                                               Visibility="Collapsed"/>

                                    <TextBlock x:Name="MessageText"
                                               Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource BrushTextPrimary}"/>
                                </StackPanel>
                            </Border>

                            <!-- METADATA + ACTIONS -->
                            <StackPanel x:Name="MetadataPanel"
                                        Orientation="Horizontal"
                                        Margin="18,2,18,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm}}"
                                           FontSize="10"
                                           Foreground="{StaticResource BrushTextSecondary}"/>

                                <TextBlock x:Name="EditedLabel"
                                           Text="edited"
                                           FontSize="10"
                                           Margin="6,0,0,0"
                                           Foreground="{StaticResource BrushTextSecondary}"
                                           Visibility="Collapsed"/>

                                <TextBlock x:Name="StatusIcon"
                                           Text="{Binding StatusIcon}"
                                           FontSize="11"
                                           Margin="6,0,0,0"
                                           Foreground="{StaticResource BrushTextSecondary}"
                                           Visibility="Collapsed"/>

                                <StackPanel x:Name="MessageActions"
                                            Orientation="Horizontal"
                                            Margin="6,0,0,0"
                                            Visibility="Collapsed">

                                    <Button Content="Edit"
        Style="{StaticResource MessageActionButtonStyle}"
        MinWidth="44"
        Padding="10,2"
        Background="#4DA3FF"
        Foreground="White"
        BorderBrush="#4DA3FF"
        ToolTip="Редактировать"
        Tag="{Binding}"
        Click="OnEditMessageClick"/>

                                    <Button Content="Delete"
        Style="{StaticResource MessageActionButtonStyle}"
        MinWidth="56"
        Padding="10,2"
        Background="#E55353"
        Foreground="White"
        BorderBrush="#E55353"
        ToolTip="Удалить"
        Tag="{Binding}"
        Click="OnDeleteMessageClick"/>

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsFile}" Value="True">
                                <Setter TargetName="FileLabel" Property="Visibility" Value="Visible"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsEdited}" Value="True">
                                <Setter TargetName="EditedLabel" Property="Visibility" Value="Visible"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding FromEmail}"
                                         Value="{x:Static local:Session.Email}">
                                <Setter TargetName="MessageBubble"
                                        Property="Background"
                                        Value="{StaticResource BrushPrimary}"/>
                                <Setter TargetName="MessageBubble"
                                        Property="HorizontalAlignment"
                                        Value="Right"/>
                                <Setter TargetName="MessageText"
                                        Property="Foreground"
                                        Value="White"/>
                                <Setter TargetName="FileLabel"
                                        Property="Foreground"
                                        Value="White"/>
                                <Setter TargetName="MetadataPanel"
                                        Property="HorizontalAlignment"
                                        Value="Right"/>
                                <Setter TargetName="StatusIcon"
                                        Property="Visibility"
                                        Value="Visible"/>
                                <Setter TargetName="MessageActions"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- ===================== INPUT ===================== -->
        <Border Grid.Row="2"
                Style="{StaticResource CardBorderStyle}"
                Padding="12"
                Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         MinHeight="36"
                         MaxHeight="120"
                         Padding="8,6"
                         Margin="0,0,10,0"
                         Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsConversationSelected}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         KeyDown="OnMessageKeyDown"/>

                <Button Grid.Column="1"
                        Width="40"
                        Height="36"
                        Margin="0,0,10,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                           IsEnabled="{Binding IsConversationSelected}"
                        Click="OnAttachClick">
                    <Viewbox Width="18" Height="18">
                        <Path Fill="{StaticResource BrushTextSecondary}"
                              Data="M6.5,2 C4.57,2 3,3.57 3,5.5 V14.5 C3,16.43 4.57,18 6.5,18"/>
                    </Viewbox>
                </Button>

                <Button Grid.Column="2"
                        Content="Отправить"
                        Width="120"
                        Height="36"
                         IsEnabled="{Binding IsConversationSelected}"
                        Click="OnSendClick"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
